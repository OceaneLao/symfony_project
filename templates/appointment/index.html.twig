{% extends 'base.html.twig' %}

{% block title %}Appointment index{% endblock %}

{% block content %}
    <h1>Appointment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Creation_date</th>
                <th>Start_datetime</th>
                <th>End_datetime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for appointment in appointments %}
            <tr>
                <td>{{ appointment.id }}</td>
                <td>{{ appointment.creationDate ? appointment.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ appointment.startDatetime ? appointment.startDatetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ appointment.endDatetime ? appointment.endDatetime|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_appointment_show', {'id': appointment.id}) }}">show</a>
                    <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_appointment_new') }}">Create new</a>
{% endblock %}
